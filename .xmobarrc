Config { font = "xft:Terminus"
       , bgColor = "#1c1c1c"
       , fgColor = "grey"
       , position = Top
       , lowerOnStart = True
       , commands = [ Run Network "enp6s0" [ "--template",  "↓<rx>↑<tx>"
                                           , "-L",          "0"
                                           , "-H",          "15000"
                                           , "--normal",    "#429942"
                                           , "--high",      "red"
                                           , "-S",          "True"
                                           ] 10

                    , Run Cpu              [ "-L",          "3"
                                           , "-H",          "50"
                                           , "--normal",    "#429942"
                                           , "--high",      "red"
                                           ] 10

                    , Run Memory           ["--template",   "Mem: <usedratio>%"
                                           , "-L",          "0"
                                           , "-H",          "50"
                                           , "--normal",    "#429942"
                                           , "--high",      "red"
                                           ] 10

                    , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %enp6s0% | %cpu% | %memory% | <fc=#69bcff>%date%</fc>"
       }
