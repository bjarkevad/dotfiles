Config { font = "xft:Terminus:pixelsize=20"
       , bgColor = "#1c1c1c"
       , fgColor = "grey"
       , position = Top
       , lowerOnStart = True
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{%wlp3s0wi% | %battery% | %kbd% | <fc=#68bcff>%date%</fc>          "
       , commands = [
        Run Wireless "wlp3s0" [
	    "-t", "<essid> <quality>%"
       ] 10

	, Run BatteryP ["BAT0"] [
            "-t", "<acstatus>"
            , "--"
            , "-O", "<fc=#00CC00><left>%</fc>"
            , "-i", "<fc=#00CC00><left>%</fc>"
            , "-o", "<left>%"
        ] 100
        , Run Date "%a %d %b %H:%M " "date" 10
        , Run Kbd []
        , Run StdinReader
        ]
       }

       -- , template = "%StdinReader% }{%dynnetwork% @ %wlp3s0wi% | %battery% | %kbd% | <fc=#68bcff>%date%</fc>          "
